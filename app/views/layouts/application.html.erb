<!DOCTYPE html>
<html>
  <head>
    <title>SpeerBea</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if !current_user %>
      <%= link_to 'Register', '/registration' %>
      <%= link_to 'Login', '/login' %>
    <% else %>
      Currently logged in as: <%= current_user.username %> <br>
      <%= link_to "Logout", '/logout' %>
    <% end %>

    <%= yield %>

  </body>
</html>
